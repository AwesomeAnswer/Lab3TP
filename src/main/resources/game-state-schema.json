{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ship": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number",
          "minimum": -250,
          "maximum": 250
        },
        "y": {
          "type": "number",
          "minimum": -150,
          "maximum": 150
        },
        "rotation": {
          "type": "number",
          "minimum": 0,
          "maximum": 359
        },
        "docked": {
          "type": "boolean"
        }
      },
      "required": ["x", "y", "rotation"]
    },
    "station": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number",
          "minimum": -250,
          "maximum": 250
        },
        "y": {
          "type": "number",
          "minimum": -150,
          "maximum": 150
        },
        "rotation": {
          "type": "number",
          "minimum": 0,
          "maximum": 359
        }
      },
      "required": ["x", "y", "rotation"]
    }
  },
  "required": ["ship", "station"]
}
